<resources xmlns:tools="http://schemas.android.com/tools"
           xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <style name="AppThemeLightBottom" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorControlNormal">@color/divider_grey</item>
        <item name="colorPrimary">#fafafa</item>
        <item name="colorPrimaryDark">#fafafa</item>
        <item name="colorAccent">#fafafa</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivityBottom</item>
        <item name="android:actionBarStyle">@style/Qc.ActionBarStyleDard</item>
        <item name="actionBarStyle">@style/Qc.ActionBarStyleDard</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textViewStyle">@style/Qc.TextCommonGrey</item>
    </style>


    <style name="AnimationActivityBottom" mce_bogus="1" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_hold</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_hold</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_bottom_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/slide_hold</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <style name="TextStyle.min" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/min_font</item>
    </style>
    <style name="TextStyle.common" parent="TextStyle.min">
        <item name="android:textSize">@dimen/common_font</item>
    </style>
    <style name="TextStyle.large" parent="TextStyle.min">
        <item name="android:textSize">@dimen/large_font</item>
    </style>
    <style name="TextStyle.max" parent="TextStyle.min">
        <item name="android:textSize">@dimen/max_font</item>
    </style>

    <style name="ToolbarStyle" parent="TextStyle.large">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ToolbarStyle.Menu" parent="ToolbarStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarStyle.Overflow" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/cyan</item>
        <item name="android:color">@color/cyan</item>
        <item name="android:textColorPrimaryInverse">@color/cyan</item>
    </style>
    <style name="Qc.toolbarStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarStyle.Menu</item>

    </style>

    <style name="Qc.ActionBarStyleDard" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionMenuTextColor">@color/text_black</item>
        <item name="android:actionMenuTextAppearance">@style/Qc.TextCommonBlack</item>
    </style>



    <style name="TextTitleHint" parent="@style/Qc.TextCommonGrey">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:background">@color/bg_grey</item>
    </style>


    <style name="Qc.TextCommonGrey" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/common_font</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>

    </style>
    <style name="Qc.TextCommonBlack" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/common_font</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Qc.TextCommonWhite" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_font</item>
        <item name="android:singleLine">true</item>
    </style>









    <style name="ChoosePicDialogStyle" parent="AlertDialog.AppCompat">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@color/white</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="ButtomDialogStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <style name="TopDialogStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_top_in</item>
        //进入时的动画
        <item name="@android:windowExitAnimation">@anim/slide_top_out</item>
        //退出时的动画
    </style>

    <style name="Qc.RatingBar" parent="android:Widget.Holo.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rate_drawable</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <style name="QcFilterStyle">
        <item name="ft_vc_drawable_on">@drawable/vd_filter_arrow_up</item>
        <item name="ft_vc_drawable_off">@drawable/vd_filter_arrow_down</item>
        <item name="ft_color_on">@color/text_black</item>
        <item name="ft_color_off">@color/text_black</item>
        <item name="ft_text_size">13sp</item>
    </style>


</resources>
