<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--

  attrs for pwview
  -->
  <declare-styleable name="PasswordView">
    <attr format="boolean" name="pw_mode"/>
    <attr format="boolean" name="pw_show_left"/>
    <attr format="boolean" name="pw_nonull"/>
  </declare-styleable>

  <declare-styleable name="AnimatedButton">
    <attr format="reference" name="ab_drawable_on"/>
    <attr format="reference" name="ab_drawable_off"/>
    <attr format="color" name="ab_color"/>
  </declare-styleable>


  <declare-styleable name="PhoneEditText">
    <attr format="boolean" name="phone_show_icon"/>
    <attr format="boolean" name="phone_nonull"/>
    <attr format="string" name="phone_hint"/>
  </declare-styleable>


  <declare-styleable name="TabView">
    <attr format="dimension" name="text_size"/>
    <attr format="color" name="text_normal_color"/>
    <attr format="color" name="text_select_color"/>
    <attr format="dimension" name="item_padding"/>
  </declare-styleable>

  <declare-styleable name="CheckableButton">
    <attr format="dimension" name="cb_text_size"/>
    <attr format="color" name="cb_text_normal_color"/>
    <attr format="color" name="cb_text_select_color"/>
    <attr format="string" name="cb_text_content"/>
    <attr format="boolean" name="cb_select"/>
    <attr format="reference" name="cb_background_select"/>
    <attr format="reference" name="cb_background_normal"/>
    <attr format="reference" name="cb_hook_icon_select"/>
    <attr format="reference" name="cb_hook_icon_normal"/>
    <attr format="string" name="cb_hook_icon_location"/>

  </declare-styleable>


  <declare-styleable name="ExpandedLayout">
    <attr format="boolean" name="el_expanded"/>
    <attr format="string" name="el_label"/>
    <attr format="reference" name="el_left_icon"/>
  </declare-styleable>


  <declare-styleable name="RecycleNoImg">
    <attr format="reference" name="rn_drawable"/>
    <attr format="string" name="rn_hint"/>
    <attr format="color" name="rn_color"/>
    <attr format="dimension" name="rn_bottom_padding"/>
    <attr format="dimension" name="rn_no_data_top"/>
  </declare-styleable>


  <declare-styleable name="BezelImageView">
    <attr format="reference" name="maskDrawable"/>
    <attr format="reference" name="borderDrawable"/>
    <attr format="boolean" name="desaturateOnPress"/>
  </declare-styleable>

  <declare-styleable name="ConnerTag" >
    <attr format="string" name="text"/>
    <attr format="color" name="bg_color"/>
    <attr format="dimension" name="radius"/>
  </declare-styleable>

  <declare-styleable name="CircleBackground" >
    <attr format="color" name="border_color"/>
    <attr format="dimension" name="border_width"/>
    <attr format="string" name="content"/>
    <attr format="dimension" name="contentSize"/>
  </declare-styleable>

  <declare-styleable name="QcToggleButtom" >
    <attr format="string" name="qc_text"/>
    <attr format="dimension" name="qc_text_size"/>
    <attr format="color" name="qc_color_on"/>
    <attr format="color" name="qc_color_off"/>
    <attr format="boolean" name="qc_checked"/>
    <attr format="reference" name="qc_vc_drawable"/>
  </declare-styleable>
</resources>