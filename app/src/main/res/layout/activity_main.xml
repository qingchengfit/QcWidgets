<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.qingchengfit.qcapp.MainActivity"
    app:layout_collapseParallaxMultiplier="0.5" app:layout_collapseMode="parallax"
              android:orientation="vertical"
    >

    <android.support.v7.widget.RecyclerView

        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />


    <cn.qingchengfit.widgets.QcFilterToggle
        android:layout_width="110dp"
        android:layout_height="50dp"
        app:ft_text_off="123"
        app:ft_text_on="345"
        app:ft_color_off="@color/text_black"
        app:ft_color_on="@color/text_black"
        app:ft_checked="true"
        app:ft_vc_drawable_off="@drawable/ic_arrow_down_black_16dp"
        app:ft_vc_drawable_on="@drawable/ic_arrow_down_black_16dp"
        app:ft_text_size="13sp"
        />
    <Button
        android:text="@string/button"
        android:layout_width="121dp"
        android:layout_height="58dp" android:id="@+id/button"

    />


</LinearLayout>
